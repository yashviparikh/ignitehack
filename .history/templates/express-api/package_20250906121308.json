{
  "name": "hackathon-express-security-api",
  "version": "1.0.0",
  "description": "Production-ready Express.js API template with built-in security and cloud-native features for hackathons",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:security": "npm audit && snyk test",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "docker:build": "docker build -t hackathon-api .",
    "docker:run": "docker run -p 3000:3000 hackathon-api",
    "k8s:deploy": "kubectl apply -f k8s/",
    "setup": "npm install && npm run format && npm test"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "mongoose": "^8.0.3",
    "redis": "^4.6.11",
    "nodemailer": "^6.9.7",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "crypto": "^1.0.1",
    "joi": "^17.11.0",
    "express-slow-down": "^2.0.1",
    "express-brute": "^1.0.1",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "snyk": "^1.1266.0",
    "@types/jest": "^29.5.8"
  },
  "keywords": [
    "hackathon",
    "express",
    "api",
    "security",
    "cloud-native",
    "cybersecurity",
    "jwt",
    "docker",
    "kubernetes"
  ],
  "author": "Hackathon Templates",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
