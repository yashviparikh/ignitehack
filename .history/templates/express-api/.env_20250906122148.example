# Hackathon Express Security API - Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
API_BASE_URL=http://localhost:3000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-a-long-random-string
JWT_EXPIRES_IN=24h

# API Keys for service-to-service communication
API_KEYS=api-key-1,api-key-2,api-key-3

# IP Filtering (optional)
# IP_WHITELIST=192.168.1.1,10.0.0.1
# IP_BLACKLIST=192.168.1.100,10.0.0.100

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB
ENABLE_MONGODB=false
MONGODB_URI=mongodb://localhost:27017/hackathon_db

# PostgreSQL
ENABLE_POSTGRESQL=false
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=hackathon_db
PG_USERNAME=postgres
PG_PASSWORD=password

# Redis (for caching and sessions)
ENABLE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=debug
# LOG_LEVEL options: error, warn, info, http, debug

# =============================================================================
# EMAIL CONFIGURATION (for notifications)
# =============================================================================
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@hackathon-template.com

# =============================================================================
# CLOUD SERVICES (optional)
# =============================================================================
# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=hackathon-uploads

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account.json

# Azure Configuration
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_KEY=your-storage-key
AZURE_CONTAINER_NAME=hackathon-files

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
# Application Performance Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=hackathon-api
APM_SECRET_TOKEN=your-apm-token
APM_SERVER_URL=http://localhost:8200

# Google Analytics (for API usage tracking)
GA_TRACKING_ID=UA-XXXXX-Y

# Sentry (for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# RATE LIMITING
# =============================================================================
# General API rate limits
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Auth endpoint rate limits
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
UPLOAD_ENABLED=false
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain
UPLOAD_DESTINATION=uploads/

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_SECRET=your-webhook-secret-for-verification
WEBHOOK_ENDPOINTS=https://your-app.com/webhooks/payment,https://your-app.com/webhooks/user

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_USER_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_API_DOCUMENTATION=true
FEATURE_RATE_LIMITING=true
FEATURE_AUDIT_LOGGING=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Only used in development environment
DEV_SEED_DATA=true
DEV_AUTO_LOGIN=false
DEV_MOCK_EXTERNAL_APIS=true

# =============================================================================
# TESTING SETTINGS
# =============================================================================
# Test database settings
TEST_DATABASE_URL=mongodb://localhost:27017/hackathon_test_db
TEST_REDIS_DB=1

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Only used in production environment
PROD_FORCE_HTTPS=true
PROD_TRUST_PROXY=true
PROD_SESSION_SECURE=true
PROD_HELMET_HSTS=true

# =============================================================================
# DOCKER SETTINGS
# =============================================================================
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest
DOCKER_NETWORK=hackathon-network

# =============================================================================
# KUBERNETES SETTINGS
# =============================================================================
K8S_NAMESPACE=hackathon
K8S_SERVICE_NAME=hackathon-api
K8S_REPLICAS=3
K8S_CPU_REQUEST=100m
K8S_CPU_LIMIT=500m
K8S_MEMORY_REQUEST=128Mi
K8S_MEMORY_LIMIT=512Mi

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=hackathon-backups
